{
  "output": "./__out",
  "helpers": {   
    "WebDriverIO": {
      "url": "http://localhost",
      "browser": "chrome",
      "restart": true,
      "keepBrowserState": false,
      "keepCookies": false,
      "smartWait": 2000,
      "waitForTimeout": 10000,
      "desiredCapabilities": {
        "chromeOptions": {
          "args": [ "--disable-gpu", "--window-size=1200,1200" ]
        }
      },
      "chrome": {
        "headless": false
      }
    },
    "BifrostHelper": {
      "require": "bifrost-io/codeceptjs/dashboard_helper.js"
    },
    "CustomCommandsHelper": {
      "require": "./custom-commands.js"
    }
  },
  "multiple": {
    "parallel": {
      "chunks": 2,
      "browsers": ["chrome"]
    }
  },  
  "include": {
    "I": "./custom-steps.js",
    "loginPage": "./pages/login.page.js"
  },
  "mocha": {},
  "bootstrap": false,
  "teardown": null,
  "hooks": [],
  "tests": "./features/*_test.js",
  "timeout": 10000,
  "name": "codeceptjs"
}